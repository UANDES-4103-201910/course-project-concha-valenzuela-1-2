<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div id="kconteiner">
  <div class = "dark_box dark_box2">
    <div class = "titles">
      <h1>Blacklist</h1>
    </div>

    <div class="search-container">
      <form class="example" action="http://localhost:3000/blacklists">
        <input type="text" placeholder="Search.." name="search">
        
        <button type="submit"><i class="fa fa-search"></i></button>
      </form>
    </div>
     
    <div class="table">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">City</th>            
            <th scope="col">Country</th>
            <th scope="col">Last access</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
       
          <% @blacklists.each do |blacklist| %>
          <tr>
            <td scope="row"><span class="glyphicon glyphicon-user"></span></td>
            <td><strong><%= User.find(blacklist.user_id)[:name]%></strong></td>
            <td><strong><%= User.find(blacklist.user_id)[:email] %></strong></td>
            <td><strong><%= User.find(blacklist.user_id)[:city]%></strong></td>
            <td><strong><%= User.find(blacklist.user_id)[:country] %></strong></td>
            <td>
              <% for l in Login.all %>
                <% if l[:email] == User.find(blacklist.user_id)[:email] %>
                  <% w = 1 %>
                <% end %>
              <% end %>
              <% if w == 1 %>
                <strong><%= Login.where(:email => User.find(blacklist.user_id)[:email])[-1][:created_at].to_s%></strong>
              <% else %>
                <strong><%= 'Has not logged yet.' %></strong>
              <% end %>
            </td>
            <td><%= link_to user_path(User.find(blacklist.user_id)) do %>
                  <span class="glyphicon glyphicon-eye-open"></span>
                <% end %></td>
            <td><%= link_to edit_user_path(User.find(blacklist.user_id)) do %>
                  <span class="glyphicon glyphicon-edit"></span>
                <% end %></td>
            <td><%= link_to blacklist_path(blacklist),
                    method: :delete,
                    data: { confirm: 'Are you sure you want to active this user?' } do %>
                  <span class="glyphicon glyphicon-check"></span>
                <% end %></td>
            <td><%= link_to user_path(User.find(blacklist.user_id)),
                    method: :delete,
                    data: { confirm: 'Are you sure you want to delete this user?' } do %>
                  <span class="glyphicon glyphicon-trash"></span>
                <% end %></td>               
            
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
