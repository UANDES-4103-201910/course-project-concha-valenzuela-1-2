<div id="kconteiner">
  <div class="box box2">
    <div class="titles">    
      <h2>Sign up</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name%><br />
        <%= f.text_field :name, :required => true%>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :required => true %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "new-password", :required => true %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :required => true %>
      </div>

      <div class="field">
        <%= f.label :birthdate %><br />
        <%= f.date_field :birthdate %>
      </div>

      <div class="field">
        <%= f.label :city %><br />
        <%= f.text_field :city %>
      </div>

      <div class="field">
        <%= f.label :country %><br />
        <%= f.text_field :country %>
      </div>

      <div class="field">
        <%= f.label :gps %><br />
        <%= f.text_field :gps %>
      </div>

      <div class="field">
        <%= f.label :biography %><br />
        <%= f.text_area :biography %>
      </div>

      <div class="field">
        <%= f.label :avatar %><br />
        <%= f.file_field :avatar %>
      </div>

      <div class="input-field col s3">
        <label>
          <%= f.check_box :terms, id:"terms" , :required => true%>
          <span>Do you agree with <%= link_to 'Terms of Services', 'http://localhost:3000/terms_of_services' %>?</span>
        </label><br>
      </div>

      <div class="input-field col s3">
        <label>
          <%= f.check_box :aup, id:"aup" , :required => true%>
          <span>Do you agree with <%= link_to 'Acceptable Use Policy', 'http://localhost:3000/aup' %>?</span>
        </label>
      </div>


      
      <br><br><br>
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
      <br>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
