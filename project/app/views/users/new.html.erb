<div id="kconteiner">
  <div class="box box2">
    <div class="titles">
      <h1><span class="glyphicon glyphicon-edit" style= "color:#FF5757"></span> New User</h1>
    </div>

    <%= form_with scope: :user, url: create_user_path, html: { multipart: true }, local: true do |form| %>
        
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@user.errors.count, "error") %> prohibited
              this user from being saved:
            </h2>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      	<p>
        	<%= form.label :name %><br>
        	<%= form.text_field :name , :required => true%>
      	</p>

      	<p>
        	<%= form.label :email %><br>
        	<%= form.text_field :email , :required => true%>
      	</p>

      	<p>
        	<%= form.label :password %><br>
        	<%= form.password_field :password , :required => true%>
      	</p>

      	<p>
        	<%= form.label :password_confirmation %><br>
        	<%= form.password_field :password_confirmation , :required => true%>
      	</p>

      	<p>
        	<%= form.label :birthdate %><br>
        	<%= form.date_field :birthdate %>
      	</p>

      	<p>
        	<%= form.label :city %><br>
        	<%= form.text_field :city %>
      	</p>

      	<p>
        	<%= form.label :country %><br>
        	<%= form.text_field :country %>
      	</p>

      	<p>
        	<%= form.label :gps %><br>
        	<%= form.text_field :gps %>
      	</p>

      	<p>
        	<%= form.label :biography %><br>
        	<%= form.text_area :biography %>
      	</p>


        <p>
          <%= form.label :avatar %><br>
          <%= form.file_field :avatar %>
        </p>

     
      	<p>
        	<br><br><br><%= form.submit "Create", :class => 'button'%>
      	</p>
    <% end %>
  </div>
</div>
